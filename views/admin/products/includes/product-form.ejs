<form
  action="<%= submitPath %>/admin/products?_csrf=<%= locals.csrfToken %>"
  method="POST"
  enctype="multipart/form-data"
>
  <p>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" required />
  </p>
  <p>
    <label for="image">Image</label>
    <input type="file" name="image" id="image" accept="image/png, image/jpg" />
  </p>
  <p>
    <label for="summary">Summary</label>
    <input
      type="text"
      name="summary"
      id="summary"
      value="<%=product.summary %>"
      required
      maxlength="250"
    />
  </p>
  <p>
    <label for="price">price</label>
    <input
      type="number"
      name="price"
      id="price"
      value="<%=product.summary %>"
      min="0.01"
      step="0.01"
      required
    />
  </p>
  <p>
    <label for="description">description</label>
    <textarea name="description" id="description" rows="7">
<input type="number" name="description" id="description" required><%=product.description %></textarea
    >
  </p>
  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button class="btn">Save</button>
  </p>
</form>
